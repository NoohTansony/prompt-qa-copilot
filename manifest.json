{
  "manifest_version": 3,
  "name": "Prompt QA Copilot",
  "description": "Minimal prompt formatter for AI chats.",
  "version": "0.1.1",
  "permissions": [],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Prompt QA Copilot",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ]
}
